f@{
    ViewBag.Title = "Welcome to EnglishWeb";
    ViewBag.ShowBreadcrumb = false;
}

<!-- Hero Section -->
<section class="hero-section py-5 mb-5" style="background: linear-gradient(135deg, var(--primary-darker), var(--primary-dark), var(--accent)); border-radius: var(--border-radius-xl); margin: -1.5rem -1.5rem 2rem -1.5rem; padding: 4rem 2rem;">
    <div class="container text-center text-white">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-4 fade-in-up" style="color: white !important; background: none !important; -webkit-text-fill-color: white !important;">
                    🌟 Master English with EnglishWeb
                </h1>
                <p class="lead mb-4 fade-in-up" style="font-size: 1.25rem; color: var(--primary-lighter);">
                    Your comprehensive platform for learning English through interactive lessons, 
                    vocabulary games, flashcards, and grammar exercises. Start your journey today!
                </p>
                <div class="fade-in-up">
                    <a href="@Url.Action("Index", "Vocabulary")" class="btn btn-light btn-lg me-3 mb-3">
                        📚 Start Learning
                    </a>
                    <a href="@Url.Action("SelectLesson", "Game")" class="btn btn-outline-light btn-lg mb-3">
                        🎮 Play Games
                    </a>
                </div>
                
                <!-- Stats -->
                <div class="row mt-5 fade-in-up">
                    <div class="col-md-4">
                        <h3 class="text-white">500+</h3>
                        <p class="text-light">Vocabulary Words</p>
                    </div>
                    <div class="col-md-4">
                        <h3 class="text-white">50+</h3>
                        <p class="text-light">Interactive Lessons</p>
                    </div>
                    <div class="col-md-4">
                        <h3 class="text-white">10+</h3>
                        <p class="text-light">Fun Games</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section mb-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold text-primary-custom">Why Choose EnglishWeb?</h2>
            <p class="lead text-muted-custom">Everything you need to master English in one place</p>
        </div>
        
        <div class="row g-4">
            <!-- Vocabulary Feature -->
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 shadow-custom border-0 vocabulary-card">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3" style="font-size: 3rem;">📚</div>
                        <h4 class="card-title text-secondary-custom">Rich Vocabulary</h4>
                        <p class="card-text">
                            Learn thousands of English words with definitions, examples, and pronunciation guides. 
                            Build your vocabulary systematically with our structured lessons.
                        </p>
                        <a href="@Url.Action("Index", "Vocabulary")" class="btn btn-primary">
                            Explore Vocabulary
                        </a>
                    </div>
                </div>
            </div>

            <!-- Games Feature -->
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 shadow-custom border-0 vocabulary-card">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3" style="font-size: 3rem;">🎮</div>
                        <h4 class="card-title text-secondary-custom">Interactive Games</h4>
                        <p class="card-text text-muted-custom">
                            Make learning fun with engaging vocabulary games, quizzes, and challenges. 
                            Test your knowledge and compete with yourself to improve.
                        </p>
                        <a href="@Url.Action("SelectLesson", "Game")" class="btn btn-primary">
                            Play Games
                        </a>
                    </div>
                </div>
            </div>

            <!-- Flashcards Feature -->
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 shadow-custom border-0 vocabulary-card">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3" style="font-size: 3rem;">🗂️</div>
                        <h4 class="card-title text-secondary-custom">Smart Flashcards</h4>
                        <p class="card-text text-muted-custom">
                            Review and memorize vocabulary with intelligent flashcard system. 
                            Spaced repetition helps you remember words for the long term.
                        </p>
                        <a href="@Url.Action("Index", "Flashcards")" class="btn btn-primary">
                            Study Flashcards
                        </a>
                    </div>
                </div>
            </div>

            <!-- Grammar Feature -->
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 shadow-custom border-0 vocabulary-card">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3" style="font-size: 3rem;">📖</div>
                        <h4 class="card-title text-secondary-custom">Grammar Rules</h4>
                        <p class="card-text text-muted-custom">
                            Master English grammar with comprehensive lessons covering all essential rules. 
                            Clear explanations with practical examples.
                        </p>
                        <a href="@Url.Action("Index", "Grammar")" class="btn btn-primary">
                            Learn Grammar
                        </a>
                    </div>
                </div>
            </div>

            <!-- Reading Feature -->
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 shadow-custom border-0 vocabulary-card">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3" style="font-size: 3rem;">📝</div>
                        <h4 class="card-title text-secondary-custom">Reading Practice</h4>
                        <p class="card-text text-muted-custom">
                            Improve reading comprehension with engaging paragraphs and stories. 
                            Develop your reading speed and understanding.
                        </p>
                        <a href="@Url.Action("Index", "Pragraph")" class="btn btn-primary">
                            Practice Reading
                        </a>
                    </div>
                </div>
            </div>

            <!-- Progress Tracking -->
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 shadow-custom border-0 vocabulary-card">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3" style="font-size: 3rem;">📊</div>
                        <h4 class="card-title text-secondary-custom">Track Progress</h4>
                        <p class="card-text text-muted-custom">
                            Monitor your learning journey with detailed progress tracking. 
                            See your improvements and identify areas for growth.
                        </p>
                        <a href="@Url.Action("Index", "Historys")" class="btn btn-primary">
                            View Progress
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Quick Start Section -->
<section class="quick-start-section py-5 bg-light rounded-custom">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h3 class="display-6 fw-bold text-primary-custom mb-3">Ready to Start Learning?</h3>
                <p class="lead text-muted-custom mb-4">
                    Join thousands of learners who have improved their English with EnglishWeb. 
                    Choose your learning path and begin your journey today.
                </p>
                
                @if (Session["User"] == null)
                {
                    <div class="d-flex flex-wrap gap-3">
                        <a href="@Url.Action("Register", "User")" class="btn btn-primary btn-lg">
                            🚀 Get Started Free
                        </a>
                        <a href="@Url.Action("Login", "User")" class="btn btn-outline-primary btn-lg">
                            👤 Login
                        </a>
                    </div>
                }
                else
                {
                    <div class="d-flex flex-wrap gap-3">
                        <a href="@Url.Action("Index", "Vocabulary")" class="btn btn-primary btn-lg">
                            📚 Continue Learning
                        </a>
                        <a href="@Url.Action("Favorites", "Vocabulary")" class="btn btn-outline-primary btn-lg">
                            ❤️ My Favorites
                        </a>
                    </div>
                }
            </div>
            <div class="col-lg-6 text-center">
                <div class="learning-illustration">
                    <div class="d-inline-block p-4 bg-gradient-primary rounded-circle mb-3" style="font-size: 5rem;">
                        🎯
                    </div>
                    <h4 class="text-primary-custom">Learn at Your Own Pace</h4>
                    <p class="text-muted">Flexible learning that fits your schedule</p>
                </div>
            </div>
        </div>
    </div>
</section>

