@model List<EnglishWeb.Models.LessonViewModel>
@{
    ViewBag.Title = "Select Vocabulary Lesson";
}

<h2 class="text-center">🧠 Select a Vocabulary Lesson</h2>

<div class="row mt-4">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <img src="@item.ImagePath" class="card-img-top" style="height:200px; object-fit:cover;" />
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Description</p>

                    <a href="@Url.Action("PlayReorder", "Game", new { lessonId = item.LessonId })"
                       class="btn btn-warning">🧩 Chơi sắp chữ</a>
                </div>
            </div>
        </div>
    }

</div>
